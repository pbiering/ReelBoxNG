### The directory environment:

MANDIR   = /usr/man
BINDIR   = /usr/sbin
SBINDIR  = /usr/sbin

#only used by plugins
VDRDIR        = ../../../vdr-$(VDRVER)
PLUGINDIR     = ../vdr-plugins
PLUGINLIBDIR  = /usr/lib/vdr

VIDEODIR       = /media/reel/recordings
CONFIGDIR      = /etc/vdr
SYSCONFIGFNAME = /etc/default/sysconfig

WITHOUT_MPLAYER=1
REMOTE=LIRC

# for DVD resume
RESUMEDIR=/tmp

# defines for burn-pi
REPLEX_ONLY = 1
BURN_USE_ISHD = 1
#USE_PATCHFONT = 1

